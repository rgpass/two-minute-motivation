{
  "name": "two-minute-motivation",
  "version": "1.0.0",
  "scripts": {
    "build": "NODE_ENV=production webpack --mode=production",
    "cy:dev": "cypress open",
    "cy:run": "cypress run",
    "lint": "eslint \"**/*.js\" --quiet",
    "start:simulate-prod": "heroku local web",
    "postinstall": "npm run build",
    "precommit": "npm-run-all lint test test:e2e:run",
    "test": "jest --coverage",
    "test:e2e:dev": "npm-run-all --parallel --race watch:server cy:dev",
    "test:e2e:run":
      "PORT=8765 npm-run-all --parallel --race watch:server cy:run",
    "test:update": "jest -u",
    "test:watch": "jest --watch",
    "watch:client": "NODE_ENV=development webpack --watch --mode=development",
    "watch:server": "nodemon index.js"
  },
  "main": "index.js",
  "dependencies": {
    "compression": "^1.7.2",
    "dotenv": "^5.0.1",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "preact": "^8.2.9",
    "preact-compat": "^3.18.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "serve-favicon": "^2.5.0",
    "webpack": "^4.10.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "cypress": "^3.0.1",
    "cypress-testing-library": "^2.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "flow-bin": "^0.74.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "webpack-cli": "^2.1.4"
  },
  "author": "Gerry Pass",
  "license": "ISC"
}
